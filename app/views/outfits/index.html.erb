<h1> All <%= @theme.capitalize %> Outfits </h1>

<div class="container">
  <div class="row">

    <% @outfits.each do |outfit| %>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to outfit_url(id: outfit.id) do %>
          <div class="card">
            <div class="card-image" style="background-image: url(<%= outfit.photo %>);">
              <div class="card-image-gradient">
                <p><%= outfit.description %></p>
              </div>
            </div>
            <div class="card-content">
              <h3><%= outfit.name %></h3>
              <p>$<%= outfit.price %>.00</p>
            </div>
          </div>
          <p></p>
        <% end %>
      </div>

    <% end %>

  </div>
</div>







